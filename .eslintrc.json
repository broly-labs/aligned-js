{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"plugins": ["@typescript-eslint"],
	"extends": [
		"standard-with-typescript",
		"plugin:prettier/recommended"
	],
	"rules": {
	  	"@typescript-eslint/no-explicit-any": "off"
	},
	"ignorePatterns": [
		"node_modules/",
		"dist/",
		"build/",
		"examples/"
	]
}
